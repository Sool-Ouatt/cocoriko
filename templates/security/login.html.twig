{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

    {% block body %}
        <!-- single slide -->
        <div class="p-2 bg-light" style="background-image: url({{ asset('img/background.jpg') }}); background-size: cover">
            <div class="container py-5 text-center card-glass text-white">
                <h1 class="display-5 fw-bold animated bounceInRight ">Optez pour un service rapide Ã  bon prix</h1>
            </div>
        </div>
        <div class="col-lg-4 mx-auto py-5">
            <div class="card card-body shadow">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    {# affichage du message flash #}
                    {% for message in app.flashes('msSucces') %}
                        <div class="flash-notice">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('msValide') %}
                        <div class="flash-notice">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                    <label for="inputUsername">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-4" autocomplete="username" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mb-4" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}
        <div align="center">
            <button class="btn btn-sm btn-outline-primary" type="submit">
                <i class="fas fa-sign-in-alt"></i> Connexion
            </button>
        </div>
    </form>
</div>
</div>
{% endblock %}
