<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Koka-Riko{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
    <!-- Bootstrap CSS -->
    <link href="{{ asset('fontawesome/css/all.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/animate.css') }}">
    <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/owl.theme.default.min.css') }}">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    {% block stylesheets %}
        {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}
</head>
<body>
    <!-- header begin -->
    <div class="container-fluid bg-warning">
        <div class="row pt-2">
            <div class="col" align="left">
                <ul class="list-inline">
                    <li class="list-inline-item color2">
                        <i class="fas fa-phone-alt contact-icon"></i> +221 338001020
                    </li>
                    <li class="list-inline-item color2">
                        <i class="fas fa-paper-plane contact-icon"></i> contact@laboniang.com
                    </li>
                </ul>
            </div>
            <div class="col" align="right">
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <a href="" target="_blank"><i class="fab fa-facebook contact-icon"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="" target="_blank"><i class="fab fa-linkedin contact-icon"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="" target="_blank"><i class="fab fa-instagram contact-icon"></i></a>
                    </li>
                    {% if app.user and is_granted('ROLE_CLIENT_ENTREPRISE') %}
                        <li class="list-inline-item">
                            <a class="" href="">Mon Espace</a>
                        </li>
                    {% endif %}
                    {% if app.user %}
                        <li class="list-inline-item">
                            <a class="" href="{{path('app_logout')}}" style="color: #111; text-decoration: none"><i class="fas fa-power-off"></i> Déconnexion</a>
                        </li>
                    {% else %}
                        <li class="list-inline-item">
                            <a class="" href="{{path('app_login')}}" style="color: #111; text-decoration: none"><i class="fas fa-sign-in-alt"></i> Se Connecter</a>
                        </li>
                        <li class="list-inline-item">
                            <a class="" href="{{path('Enregistrer')}}" style="color: #111; text-decoration: none"><i class="fas fa-user-plus"></i> S'inscrire</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    <!-- bar de menu -->
    <nav class="navbar sticky-top navbar-expand-lg bg-light shadow"><!-- style="border-bottom: 1px solid #000f61;" -->
        <div class="container-fluid">
            <img src="{{ asset('img/logo.png') }}" alt="" width="100" class="d-inline-block align-text-top">
            <!-- <a class="navbar-brand" href="#"></a> -->
            <button class="navbar-toggler btncol" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                Menu <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav" align="center">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="{{path('home')}}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="">Boutique</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold position-relative" href="{{path('contenuPanier')}}">
                            <i class="fas fa-shopping-cart"></i>
                            {% if app.session.get("nombreType") %}
                                <span class="position-absolute top-1 start-100 translate-middle badge rounded-pill bg-secondary">
                                    {{app.session.get("nombreType")}}
                                </span>
                            {% endif %}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {% if app.request.pathinfo == "/" %}
        <!-- slide -->
        <div class="carousel" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active animated fadeIn">
                    <img src="{{asset('img/bg_1.jpg')}}" alt="">
                    <div class="container">
                        <div class="carousel-caption text-start">
                            <h1>Example headline.</h1>
                            <p>for the first slide of the carousel.Some representative placeholder content </p>
                            <!-- <p><a class="btn btn-outline-success" href="#">Sign up today</a></p> -->
                        </div>
                    </div>
                </div>
                <div class="carousel-item animated fadeIn">
                    <img src="{{ asset('img/bg_3.jpg') }}" alt="">
                    <div class="container">
                        <div class="carousel-caption text-start">
                            <h1>Another example headline.</h1>
                            <p>S placeholder content forome representative the second slide of the carousel.</p>
                            <!-- <p><a class="btn btn-outline-success" href="#">Learn more</a></p> -->
                        </div>
                    </div>
                </div>
                <div class="carousel-item animated fadeIn">
                    <img src="{{ asset('img/bg_1.jpg') }}" alt="">
                    <div class="container">
                        <div class="carousel-caption text-start">
                            <h1>One more for good measure.</h1>
                            <p>Some representative placeholder content for the third slide of this carousel.</p>
                            <!-- <p><a class="btn btn-outline-success" href="#">Browse gallery</a></p> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <!-- single slide -->
        <div class="p-2 bg-light" style="background-image: url({{ asset('img/poulet.jpg') }}); background-size: cover">
            <div class="container py-5 text-center card-glass text-white">
                <h1 class="display-5 fw-bold animated bounceInRight ">Optez Pour un service rapide à bon prix</h1>
            </div>
        </div>
    {% endif %}
    <!-- Header end -->
    <div class="bg-light">
        {% block body %}{% endblock %}
        </div>
        <!-- Footer -->
        <div class="container-fluid">
            <div class="row bg-warning border-bottom">
                <div class="col-md-4 p-4">
                    <img src="{{ asset('img/logo.png') }}" alt="" width="200" class="d-inline-block align-text-top">
                    <p class="d-flex">Lorem ipsum dolor sit, amet, consectetur adipisicing elit. Illum quisquam provident consectetur iusto. Sit impedit recusandae nulla harum corrupti, consectetur eum ipsam minus fuga. Blanditiis unde tempora deserunt nemo, culpa?</p>
                </div>
                <div class="col-md-4 p-4">
                    Lorem ipsum dolor, sit amet consectetur adipisicing elit. Dolore, esse dicta vel asperiores temporibus quia fugit adipisci alias quam odio, et ducimus assumenda, quibusdam doloribus voluptatem quo sunt voluptas tenetur.
                </div>
                <div class="col-md-4 p-4">
                    <h4 class="fw-bold">Contacts</h4>
                    <ul class="list-unstyled m-3" style="font-size: 18px;">
                        <li class="m-3"><i class="fas fa-map-marker-alt"></i> Sanar, Saint-Louis</li>
                        <li class="m-3"><i class="fas fa-phone-alt"></i> +221 781372588</li>
                        <li class="m-3"><i class="fas fa-paper-plane"></i> cocoriko@gamil.com</li>
                        <li class="m-3"><i class="fas fa-globe"></i> www.cocoriko.com</li>
                    </ul>
                    <hr>
                    <ul class="list-inline m-3">
                        <li class="list-inline-item">
                            <a href="" target="_blank"><i class="fab fa-facebook contact-icon-footer"></i></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="" target="_blank"><i class="fab fa-linkedin contact-icon-footer"></i></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="" target="_blank"><i class="fab fa-instagram contact-icon-footer"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <footer class="container-fluid p-2 bg-warning">
            <p class="float-end"><a href="#"><i class="fas fa-chevron-circle-up text-white"></i></a></p>
            <p style="font-size: 10px">&copy; <script>document.write(new Date().getFullYear());</script> Tabax Labs &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
        </footer>

    </body>
    <script src="{{asset('fontawesome/js/all.min.js')}}" ></script>
    <script src="{{asset('js/bootstrap.min.js')}}"></script>
    <script src="{{asset('vendors/jquery.min.js')}}"></script>
    <script src="{{asset('js/owl.carousel.min.js')}}"></script>
    <script src="{{asset('js/monScript.js')}}" ></script>
    <script src="{{asset('js/style.js')}}"></script>
    <script>
    $(document).ready(function() {
        var owl = $('.owl-carousel');
        owl.owlCarousel({
            items: 5,
            loop: true,
            margin: 10,
            autoplay: true,
            autoplayTimeout: 1000,
            autoplayHoverPause: true,
            responsiveClass:true,
            responsive:{
                0:{
                    items:2,
                    nav:false
                },
                600:{
                    items:3,
                    nav:false
                },
                1000:{
                    items:5,
                    nav:false,
                    loop:true
                }
            }
        });
    })
    </script>
    {% block javascripts %}
    {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
    </html>
