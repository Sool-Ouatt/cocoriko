{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

    {% block body %}
        <!-- end single slide -->
        <main class="container-fluid">
            <!-- products -->
            <div>
                <h2>{{ message }}</h2>
            </div>
            <div class="container">
                <div class="col-sm">
                    <div class="card card-body table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Designation</th>
                                    <th>Quantit√©</th>
                                    <th>Prix unitaire</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for prod in lesProduit %}
                                        <tr>
                                            <td>
                                                <img src="{{asset('img//produits/' ~ prod[4])}}" class="img-fluid" width="50" alt="">
                                            </td>
                                            <td>{{ prod[1] }} frs CFA</td>
                                            <td>{{ prod[3] }}</td>
                                            <td>{{ prod[2] }} frs CFA</td>
                                        </tr>
                                {% endfor %}
                                    <tr>
                                        <td colspan="3">Total</td>
                                        <td>{{ valeurPanier }} frs CFA</td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
