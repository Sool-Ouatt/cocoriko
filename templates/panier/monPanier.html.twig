{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <!-- single slide -->
    <div class="p-2 bg-light" style="background-image: url({{ asset('img/background.jpg') }}); background-size: cover">
        <div class="container py-5 text-center card-glass text-white">
            <h1 class="display-5 fw-bold animated bounceInRight ">Optez Pour un service rapide à bon prix</h1>
        </div>
    </div>
    <!-- end single slide -->
    <main class="container-fluid">

    <div class="container">
        <div class="col-md-6">
            <div class="card card-body">
                <div class="row">
                    <!--div class="col-md-6">
                            <img src="{{ asset('img/img.jpg') }}" class="card-img-top img-fluid" alt=""></div -->
                    {% for nombre in 1..app.session.get('nombreType') %}
                        {% set produi = "produit" ~ nombre %}
                        <div class="col-md-6">
                            <p><strong>Designation:</strong> {{ app.session.get(produi)[1] }} frs CFA</p>
                            <p><strong>Prix unitaire:</strong> {{ app.session.get(produi)[2] }} frs CFA</p>
                            <p><strong>Quantité:</strong> {{ app.session.get(produi)[3] }}</p>
                        </div>
                    {% endfor %}
                    <hr>
                    <p><strong>Total:</strong> {{ app.session.get('valeurPanier') }} frs CFA</p>
                    <a href="{{ is_granted('ROLE_CLIENT_ENTREPRISE') ? path('validationEntreprise') : path('validationClient') }}">valide</a>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <!-- autres produit -->
    <div class="container-fluid">
        <div class="row">
            <h4 class="m-4">Ajouter d'autres produits</h4>
            <div class="owl-carousel">
                {% for prod in lesProduits %}
                    <div class="item">
                        <div class="card border-color2">
                            <img src="{{ asset('img/img.jpg') }}" class="card-img-top" width=100 alt="">
                            <div class="card-body">
                                <p class="p-card">
                                    Prix: {{ prod.prixVente ~ " Fcfa" }}
                                </p>
                                <p class="p-card">
                                    Poids: {{ prod.poids ~ " kg" }}
                                </p>
                                <p class="p-card">
                                    Réduction: {{ prod.tauxReduction ~ "%" }}
                                </p>
                                <div align="right">
                                    <a class="btn btn-outline-primary" href="{{ '/panier/ajout/' ~ prod.id }}">Acheter</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}