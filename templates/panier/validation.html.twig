{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

    {% block body %}
        <!-- end single slide -->
        <main class="container-fluid">
            <!-- products -->

            <div class="container">
                <div class="row py-4">
                    <div class="col-sm-6">
                        <div class="card card-body">
                            <h5>Veuillez remplire le formulaire pour valider votre commande</h5>
                            <hr>
                            <div class="container">
                                <!--form action=""-->
                                {{ form_start(formulaire) }}
                                <div class="form-group mb-3">
                                    {{ form_row(formulaire.prenom , {attr: {'class': 'form-control', 'placeholder': 'Exemple: Souleymane'}}) }}
                                </div>
                                <div class="form-group mb-3">
                                    {{ form_row(formulaire.nom , {attr: {'class': 'form-control', 'placeholder': 'Exemple: Ndiaye'}}) }}
                                </div>
                                <div class="form-group mb-3">
                                    {{ form_row(formulaire.telephone , {attr: {'class': 'form-control', 'placeholder': 'Exemple: 781352588'}}) }}
                                </div>
                                <div class="form-group mb-3">
                                    {{ form_row(formulaire.email , {attr: {'class': 'form-control', 'placeholder': 'Exemple: ndaiayesouley@gmail.com'}}) }}
                                </div>
                                <div class="form-group mb-3">
                                    {{ form_row(formulaire.Adresse , {attr: {'class': 'form-control', 'placeholder': 'Exemple: saint-louis pikine rue tall'}}) }}
                                    <!--input class="form-control" type="text" placeholder="Ville"-->
                                </div>
                                <div class="form-group mb-3">
                                    {{ form_row(formulaire.date , {attr: {'class': 'form-control'}}) }}
                                </div>
                            <!-- p><strong>Mode de Payement</strong></p >
                            <div class="form-group mb-3">
                                {#  form_row(formulaire.ModePayement , {attr: {'class': 'form-control'}}) }} #}
                                <input class="form-check-input" type="radio" value="" aria-label="..." name="mode" id="domicile"-->
                                <!--label for="domicile" class="form-check-label">A la livraison</label >
                            </div -->
                            <!-- div class="form-group mb-3">
                                 {# { form_label(formulaire.Livraison, null, {
                                    'label': 'A la livraison',
                                    'label_attr': {'class': 'foo'}
                                }) }}
                                {{ form_widget(formulaire.Livraison,{attr: {'class': 'form-check-input','name': 'mode','id':'domicile'}}) }} #}
                                < input class="form-check-input" type="radio" value="" aria-label="..." name="mode" id="inline" >
                                < label for="inline" class="form-check-label">En Line</label >
                            </div -->
                            <div align="right">
                                {{ form_row(formulaire.Valider , {attr: {'class': 'btn btn-primary'}}) }}
                                <!-- a class="btn btn-outline-primary" href="achat.html">Valider</a -->
                            </div>
                            {{ form_end(formulaire) }}
                            <!--/form-->
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card card-body table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Designation</th>
                                    <th>Quantit√©</th>
                                    <th>Prix unitaire</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for nombre in 1..app.session.get('nombreType') %}
                                    {% set produi = "produit" ~ nombre %}
                                        <tr>
                                            <td>
                                                <img src="{{asset('img//produits/' ~ app.session.get(produi)[4])}}" class="img-fluid" width="50" alt="">
                                            </td>
                                            <td>{{ app.session.get(produi)[1] }} frs CFA</td>
                                            <td>{{ app.session.get(produi)[3] }}</td>
                                            <td>{{ app.session.get(produi)[2] }} frs CFA</td>
                                        </tr>
                                    {% endfor %}
                                    <tr>
                                        <td colspan="3">Total</td>
                                        <td>{{ app.session.get('valeurPanier') }} frs CFA</td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
